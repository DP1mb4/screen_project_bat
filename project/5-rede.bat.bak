@echo off
title By DiP1mb4
color a

:inicio
cls
echo.
echo    ==================================
echo             Servicos de Red
echo    ==================================
echo.

echo [1] Obter o IP da Maquina       [2] Testar Conexao de Rede
echo.
echo [3] Navegar na Web              [4] Youtube
echo.
echo [5] Dispositivos Conectados     [6] Retornar ao Menu
echo.

set /p op=Informe a opcao desejada: 

if %op%== 1 (cls
ipconfig
pause
goto:inicio)

if %op%== 2 (goto:teste)

if %op%== 3 (goto:web)

if %op%== 4 (goto:youtube)

if %op%== 5 (cls
arp -a
pause
goto:inicio)

if %op%== 6 (call 2-menu) else (
	cls
	echo.
	echo    ==================================
	echo              Opcao Invalida
	echo    ==================================
	echo.
	pause
	goto inicio
)






:teste
cls
echo.
echo    ==================================
echo             Teste de Conexao
echo    ==================================
echo.

set /p ende=Informe o endereco da pagina: 
ping %ende% -n 13
echo.
pause
goto:inicio

:web
cls
echo.
echo    ==================================
echo              Navegador Web
echo    ==================================
echo.
echo    [1] Brave               [2] Chrome  
echo.        
echo    [3] Opera               [4] Edge
echo.               
echo               [5] Voltar
echo.

set /p nav=Informe o Navegador Desejado: 

:navegador
if %nav%== 1 (
	set nav=brave.exe
)
if %nav%== 2 (
	set nav=chrome.exe
)
if %nav%== 3 (
	set nav=opera.exe
)
if %nav%== 4 (
	set nav=msedge.exe
)
if %nav%== 5 (
	call inicio
)

goto web1


:web1
echo.
echo    ==================================
echo           Navegador Web - %nav%
echo    ==================================
echo.
echo [1] Pesquisa Normal   [2] Pesquisa via URL
echo.
echo                [3] Voltar
echo.
set /p tipo=Informe o tipo de pesquisa: 
if %tipo%== 1 (goto:normal)
if %tipo%== 2 (goto:url)
if %tipo%== 3 (goto:inicio) else (
	cls
	echo.
	echo    ==================================
	echo              Opcao Invalida
	echo    ==================================
	echo.
	pause
	goto web
) 

:normal
cls
echo.
echo    ==================================
echo          Navegador Web - Normal
echo    ==================================
echo.
set /p busca=Informe o titulo da busca: 
start %nav% https://www.google.com/search?q="%busca%"
goto web


:url
cls
echo.
echo    ==================================
echo           Navegador Web - URL
echo    ==================================
echo.
set /p busca=Informe o titulo da busca: 
start %nav% %busca%
goto web

:youtube
cls
echo.
echo    ==================================
echo                  Youtube
echo    ==================================
echo.
set /p busca=Informe o titulo da pesquisa: 
start %nav% https://www.youtube.com/results?search_query='%busca%'
goto inicio